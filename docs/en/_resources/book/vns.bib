@article{farrandVagusNerveStimulation2023,
  title = {Vagus Nerve Stimulation Parameters Evoke Differential Neuronal Responses in the Locus Coeruleus},
  author = {Farrand, Ariana and Jacquemet, Vincent and Verner, Ryan and Owens, Misty and Beaumont, Eric},
