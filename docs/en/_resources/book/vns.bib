@article{kochMetaanalysisHeartRate2019,
  title = {A Meta-Analysis of Heart Rate Variability in Major Depression},
  author = {Koch, Celine and Wilhelm, Marcel and Salzmann, Stefan and Rief, Winfried and Euteneuer, Frank},
  year = {2019},
