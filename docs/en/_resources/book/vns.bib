  langid = {english},
  file = {/Users/sprague/Zotero/storage/Y6W6AHNE/Forte et al. - 2022 - Ear your heart transcutaneous auricular vagus ner.pdf}
}

@article{galinPredictivePotentialHeart2024,
  title = {The {{Predictive Potential}} of {{Heart Rate Variability}} for {{Depression}}},
  author = {Galin, Shir and Keren, Hanna},
