@article{addorisioInvestigationalTreatmentRheumatoid2019,
  title = {Investigational Treatment of Rheumatoid Arthritis with a Vibrotactile Device Applied to the External Ear},
  author = {Addorisio, Meghan E. and Imperato, Gavin H. and De Vos, Alex F. and Forti, Steve and Goldstein, Richard S. and Pavlov, Valentin A. and Van Der Poll, Tom and Yang, Huan and Diamond, Betty and Tracey, Kevin J. and Chavan, Sangeeta S.},
